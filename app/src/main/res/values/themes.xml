<resources xmlns:tools="http://schemas.android.com/tools">



    <!-- Color de texto principal -->
    <color name="textColor">#000000</color>
    <style name="Theme.IBooking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <!-- Color primario de la app -->
        <color name="colorPrimary">#FF5722</color>

        <!-- Color primario oscuro de la app -->
        <color name="colorPrimaryDark">#E64A19</color>

        <!-- Color de fondo de la app -->
        <color name="backgroundColor">#FFFFFF</color>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <!-- Estilos de botones -->
        <style name="BookingButtonStyle" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/button_background</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:padding">16dp</item>
        </style>

        <!-- Estilo para los tÃ­tulos -->
        <style name="AppTitle" parent="TextAppearance.AppCompat.Large">
            <item name="android:textColor">@color/textColor</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- Estilo para los textos normales -->
        <style name="AppText" parent="TextAppearance.AppCompat.Body1">
            <item name="android:textColor">@color/textColor</item>
        </style>

        <!-- Estilo para los textos de botones -->
        <style name="AppButtonText" parent="TextAppearance.AppCompat.Button">
            <item name="android:textColor">@color/white</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">16sp</item>
        </style>

    </style>
</resources>